<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FamilyTasks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>
<body style="background-color: #fff;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container col-lg-8">
                <a class="navbar-brand"><i class="fa fa-users fa-1x"></i><b>Family Task</b></a>
            </div>
            <div class="btn-group mr-2" role="group" aria-label="First group">
                <a type="button" asp-action="AddMember" asp-controller="Member" class="btn btn-light">Members</a>
            </div>
            <div class="btn-group mr-2" role="group" aria-label="Second group">
                <a type="button" asp-action="AssignTask" asp-controller="Task" class="btn btn-light">Manage Tasks</a>
            </div>
        </nav>
    </header>
    @if (Convert.ToString(TempData["Error"]) == "false" && !string.IsNullOrEmpty(Convert.ToString(TempData["Error"])))
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert" id="alert">
            <strong> @TempData["Message"] </strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    else if (Convert.ToString(TempData["Error"]) == "true" && !string.IsNullOrEmpty(Convert.ToString(TempData["Error"])))
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert" id="alert">
            <strong> @TempData["Message"] </strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="wrapper">
        <partial name="_Sidebar" />
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - FamilyTasks
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/font-awesome.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
